{
    "name": "myrodlbot",
    "author": "tetra",
    "version": "1.0.0",
    "license": "GPL-3.0",
    "main": "./build/app.js",
    "scripts": {
        "start": "npm run clean && tsc && node ./build/index.js",
        "clean": "rimraf ./tmp && rimraf ./bin && rimraf ./build && rimraf ./dist",
        "rollup": "rollup --config rollup.config.js --environment BUILD:production",
        "build": "npm run rollup && tsc && pkg ."
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "pkg": "^5.5.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.69.0",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "chalk": "^5.0.0",
        "dotenv": "^16.0.0",
        "nanoid": "^3.3.1",
        "telegraf": "^4.7.0",
        "yt-dlp-wrap": "^2.3.11"
    },
    "bin": {
        "index": "./build/index.js"
    },
    "pkg": {
        "scripts": "./build/**/*.js",
        "targets": [
            "node17-linux-x64",
            "node17-macos-x64",
            "node17-win-x64"
        ],
        "outputPath": "dist"
    }
}
